{
  "$schema": "./gen/schemas/desktop-schema.json",
  "productName": "Bitrot",
  "version": "1.0.0",
  "identifier": "com.bitrot.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1419",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "BitRot",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "backgroundColor": "#000000",
        "dragDropEnabled": true
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.ico", "icons/icon.icns", "icons/icon.png"],
    "externalBin": ["binaries/ffmpeg", "binaries/ffprobe"],
    "targets": "all"
  },
  "plugins": {
    "shell": {
      "open": ".+"
    }
  }
}
